<% if @building.errors.any? %>
    <div id="error_explanation">
      <% @building.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<%= simple_form_for @building do |f| %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :state, collection: Building.us_states  %>
  <%= f.input :postal_code %>
  <%= f.input :description, as: :text %>
  <%= f.association :owner, label_method: :full_name, value_method: :id, include_blank: false %>
  <%= f.submit %>
<% end %>